import pandas as pd
from pycaret.classification import *

# Load dataset
df = pd.read_csv("soil_weather_clean.csv")

# Create soil pH category
def categorize_ph(ph):
    if ph < 5.5:
        return "Acidic"
    elif ph <= 7.5:
        return "Neutral"
    else:
        return "Alkaline"

df["soil_ph_category"] = df["soil_ph"].apply(categorize_ph)

# Initialize PyCaret
clf = setup(
    data=df,
    target="soil_ph_category",
    session_id=42,
    silent=True
)

# Compare models
best_model = compare_models()

# Finalize best model
final_model = finalize_model(best_model)

# Feature importance
plot_model(final_model, plot="feature")
